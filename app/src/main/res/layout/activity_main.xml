<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/mainActivity_rxBinding_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:text="RxBinding绑定view"
            />
        <TextView
            android:id="@+id/mainActivity_rxPermission_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:text="RxPermition管理安卓6.0权限"
            />
        <TextView
            android:id="@+id/mainActivity_tabLayout_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:text="示范导航栏+viewPager"
            />
        <TextView
            android:id="@+id/mainActivity_adapterLib_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:text="示范RecyclerView和万能adapter-lib库"
            />
        <TextView
            android:id="@+id/mainActivity_net_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:text="网络请求"
            />
        <TextView
            android:id="@+id/mainActivity_upLoadPicture_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:text="上传图片"
            />




    </LinearLayout>


</layout>
